<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.spring4.reply.dao.ReplyMapper">
    <insert id="insertReply" parameterType="replyVO">
        INSERT INTO reply(oriid,content,writer)
        VALUES (#{oriid},#{content},#{writer})
    </insert>
    <update id="updateReply" parameterType="replyVO">
        UPDATE reply
        SET content = #{content}
        WHERE id =#{id}
    </update>
    <delete id="deleteReply" parameterType="replyVO">
        DELETE FROM reply
        WHERE ID = #{id}
    </delete>
    <!--    ReplyMapper.java와 연결이 됨.-->


    <select id="getReplyByBbsNO" resultType="com.example.spring4.reply.vo.ReplyVO" parameterType="int">
        SELECT *
        FROM reply
        WHERE oriid = #{oriid}
    </select>
</mapper>